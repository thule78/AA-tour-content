<div class="container">
  <div class="mt-3">
      <%= simple_form_for :search, url: contents_path, method: :get do %>
    <div class="search-form-control form-group">
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "type in : thailand, approved, hiking ect.."
    %>
      <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>
  </div>
  <div>
    <%= will_paginate %>
  </div>
  <div class="row">
    <% @contents.each do |content| %>
    <%= link_to content_path(content), class:"content-card", :action => 'go' do %>
  <div class="card m-3">
    <div class="card-header">
      Note: <%= content.note.first(25) %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= content.title.first(20) %></h5>
      <p class="card-text"><strong>Root: </strong><%= content.country %>/<%= content.destination %>/<%= content.activity %></p>
      <p class="card-text"><strong>Last Updated: </strong><%= content.updated_at %></p>
      <p class="btn btn-outline-primary"><%= content.status %></p>
    </div>

  </div>
  <%end%>
    <% end %>
  </div>
  <div>
    <%= will_paginate %>
  </div>
</div>
