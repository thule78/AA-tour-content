<%= simple_form_for @content do |f| %>
<% if @content.errors.any? %>
<div class="errors-container">
  <ul>
    <% @content.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.input :title, label:'title',:placeholder => 'Name', class: 'form-control'%>
</div>
<div class="form-group">
  <%= f.input :new_title, label:'new title',label_html: { class: 'note' },:placeholder => 'Sexy title that sale', class: 'form-control'%>
</div>
<div class="form-row">
  <div class="form-group col-md-4">
    <%= f.input :country, label:'country',as: :select, :collection => ["Bhutan","Cambodia","China", "Laos", "Nepal", "Myanmar", "Malaysia", "Mongolia", "Thailand", "Vietnam", "Indonesia", "Philippines", "Japan", "Kyrgyzstan", "Uzbekistan", "Azerbaijan" ], class: 'form-control'%>
  </div>
  <div class="form-group col-md-4">
    <%= f.input :activity1, label:'activity 1', as: :select,:collection => ["Biking","Hiking" ,"Rafting","Unesco other", "Other Water","Outdoor","Summary", "Visa", "Weather", "Festival", "Q&A"], class: 'form-control'%>
  </div>
  <div class="form-group col-md-4">
    <%= f.input :activity2, label:'activity 2', as: :select,:collection => ["Biking","Hiking" ,"Rafting","Unesco other", "Other Water","Outdoor","Summary", "Visa", "Weather", "Festival", "Q&A"], class: 'form-control'%>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-4">
    <%= f.input :destination, label:'location', :placeholder => 'Chiangmai, Sapa, Luang Pra Phang', class: 'form-control'%>
  </div>
  <div class="form-group col-md-4">
    <%= f.input :source, label:'source', :placeholder => 'John 2008', class: 'form-control'%>
  </div>
  <% if current_user.admin? %>
  <div class="form-group col-md-4">
    <%= f.input :status, label:'status', as: :select, :collection => ["editing", "Proofreading" ,"Approving","Publish"], selected: "editing", class: 'form-control'%>
  </div>
  <% end %>

</div>
<div class="form-group">
  <%= f.input :summary, label: 'Summary',label_html: { class: 'note' }, :as => :trix_editor, :input_html => {:rows => 10}, class: "form-control note" %>
</div>
<div class="form-group">
  <%= f.input :highlight, label: 'Highlight', label_html: { class: 'note' },:as => :trix_editor, :input_html => {:rows => 5}, class: "form-control note" %>
</div>
<div class="form-group">
  <%= f.input :itinerary, label: 'Itinerary', :as => :trix_editor, :input_html => {:rows => 12}, class: "form-control" %>
</div>
<div class="form-row">
  <div class="form-group col-md-4">
    <%= f.input :code, label:'code',class: 'form-control'%>
  </div>
  <div class="form-group col-md-4">
    <%= f.input :provider, label:'Provider', class: 'form-control'%>
  </div>
  <div class="form-group col-md-4">
    <%= f.input :length, label:'duration', :placeholder => '4 days | 3 night', class: 'form-control'%>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-4">
    <%= f.input :style, label:'style',class: 'form-control'%>
  </div>
  <div class="form-group col-md-4">
    <%= f.input :theme, label:'theme', class: 'form-control'%>
  </div>
  <div class="form-group col-md-4">
    <%= f.input :comfort, label:'comfort', class: 'form-control'%>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-4">
    <%= f.input :start_finish, label:'start/finish destination', :placeholder => 'Chiangmai-Hanoi', class: 'form-control'%>
  </div>
  <div class="form-group col-md-4">
    <%= f.input :related_trips, label:'Related trips', class: 'form-control'%>
  </div>
  <div class="form-group col-md-4">
    <%= f.input :go_next, label:'Where go next', class: 'form-control'%>
  </div>
</div>
<div class="form-group">
  <%= f.input :note, label:'Internal note', :placeholder => 'note for writer, developer, admin', class: 'form-control'%>
</div>
<%= f.submit class: 'btn btn-info mb-5' %>
<%= f.button :button, 'Cancel', type: :reset, class: 'btn btn-outline-info mb-5' %>

<%end%>
